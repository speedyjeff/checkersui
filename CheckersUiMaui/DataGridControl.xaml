<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckersUiMaui.DataGridControl">

    <ScrollView>
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- header -->
            <Frame BorderColor="Black" BackgroundColor="LightGray" CornerRadius="0" Grid.Row="0" Grid.Column="0">
                <Label Text="#" FontAttributes="Bold" Grid.Row="0" />
            </Frame>
            <Frame BorderColor="Black" BackgroundColor="LightGray" CornerRadius="0" Grid.Row="0" Grid.Column="1">
                <Label Text="Black" FontAttributes="Bold" Grid.Row="0" />
            </Frame>
            <Frame BorderColor="Black" BackgroundColor="LightGray" CornerRadius="0" Grid.Row="0" Grid.Column="2">
                <Label Text="Red" FontAttributes="Bold" Grid.Row="0" />
            </Frame>

            <!-- dynamic inserts -->

        </Grid>
    </ScrollView>
</ContentView>
